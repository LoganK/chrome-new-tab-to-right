{
  "name": "New Tab To Right Keyboard Shortcut",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to set keyboard shortcut"
  },
  "commands": {
    "new-tab-to-right": {
      "description": "Opens New Tab to Right",
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      }
    },
    "_execute_action": {
      "description": "Open extension configuration"
    }
  },
  "description": "Adds a keyboard shortcut for opening a new tab to right. If grouped, adds to tab group.",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [ "tabs", "tabGroups" ]
}
